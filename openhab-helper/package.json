{
  "name": "openhab-helper",
  "scripts": {
    "frontend:serve": "npm run frontend:build:icons && ng serve --host 0.0.0.0 --port 4200",
    "frontend:build": "npm run frontend:build:icons && ng build --configuration production",
    "frontend:build:icons": "mkdir -p ./frontend/tmp/assets && node ./frontend/scripts/generate-svg-icons.js",
    "backend:start": "npm run backend:build && npm run backend:start:build",
    "backend:start:build": "node dist/backend/index.js",
    "backend:build": "tsc --project backend/tsconfig.json && npm run backend:build:help",
    "backend:build:help": "npx marked -i ./HOWTO.md -o ./dist/backend/help.html",
    "backend:serve": "nodemon -e ts --watch backend --exec \"npm run backend:start\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^13.3.0",
    "@angular/common": "^13.3.0",
    "@angular/compiler": "^13.3.0",
    "@angular/core": "^13.3.0",
    "@angular/forms": "^13.3.0",
    "@angular/platform-browser": "^13.3.0",
    "@angular/platform-browser-dynamic": "^13.3.0",
    "@angular/router": "^13.3.0",
    "@hapi/hapi": "^20.2.1",
    "@hapi/inert": "^6.0.5",
    "@hapi/jwt": "^2.1.0",
    "axios": "^0.26.1",
    "bulma": "^0.9.3",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "node-json-db": "^1.5.0",
    "rxjs": "^7.5.5",
    "tslib": "^2.3.1",
    "zone.js": "^0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.3.0",
    "@angular/cli": "^13.3.0",
    "@angular/compiler-cli": "^13.3.0",
    "@types/hapi__hapi": "^20.0.10",
    "@types/hapi__inert": "^5.2.3",
    "@types/hapi__jwt": "^2.0.1",
    "@types/node": "^17.0.22",
    "eva-icons": "^1.1.3",
    "fast-xml-parser": "^4.0.7",
    "nodemon": "^2.0.15",
    "typescript": "^4.6.2"
  }
}
