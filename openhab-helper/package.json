{
  "name": "openhab-helper",
  "scripts": {
    "frontend:serve": "npm run frontend:build:icons && ng serve --host 0.0.0.0 --port 4200",
    "frontend:build": "npm run frontend:build:icons && ng build",
    "frontend:build:icons": "mkdir -p ./frontend/tmp/assets && node ./frontend/scripts/generate-svg-icons.js",
    "frontend:build:locale": "ng extract-i18n",
    "backend:start": "npm run backend:build && npm run backend:start:build",
    "backend:start:build": "node dist/backend/index.js",
    "backend:build": "tsc --project backend/tsconfig.json",
    "backend:serve": "nodemon -e ts --watch backend --exec \"npm run backend:start\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.2.1",
    "@angular/common": "^14.2.1",
    "@angular/compiler": "^14.2.1",
    "@angular/core": "^14.2.1",
    "@angular/forms": "^14.2.1",
    "@angular/localize": "^14.2.1",
    "@angular/platform-browser": "^14.2.1",
    "@angular/platform-browser-dynamic": "^14.2.1",
    "@angular/router": "^14.2.1",
    "@hapi/accept": "^6.0.0",
    "@hapi/hapi": "^20.2.2",
    "@hapi/inert": "^7.0.0",
    "@hapi/jwt": "^3.0.0",
    "axios": "^0.27.2",
    "bulma": "^0.9.4",
    "joi": "^17.6.0",
    "lodash": "^4.17.21",
    "ng2-charts": "^4.0.0",
    "node-json-db": "^2.1.2",
    "rxjs": "^7.5.6",
    "tslib": "^2.4.0",
    "zone.js": "^0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.2",
    "@angular/cli": "^14.2.2",
    "@angular/compiler-cli": "^14.2.1",
    "@types/hapi__hapi": "^20.0.12",
    "@types/hapi__inert": "^5.2.3",
    "@types/hapi__jwt": "^2.0.1",
    "@types/node": "^18.7.18",
    "eva-icons": "^1.1.3",
    "fast-xml-parser": "^4.0.10",
    "nodemon": "^2.0.19",
    "typescript": "^4.8.3"
  }
}
